<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#030A30"

        android:orientation="vertical"
        >



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/corder_order_id"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:layout_marginTop="10dp"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/corder_service_name_id"
            android:textColor="#ffff"
            android:textSize="20sp"



            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#ffff"
            android:id="@+id/corder_provider_name_id"
            android:textSize="20sp"



            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/corder_provider_contact_id"
            android:textColor="#ffff"
            android:textSize="20sp"



            />


        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/corder_time_id"
            android:textColor="#ffff"
            android:textSize="20sp"



            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/corder_status_id"

            android:textColor="#ffff"
            android:textSize="20sp"



            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/corder_cost_id"
            android:textColor="#ffff"
            android:textSize="20sp"



            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Payment"
            android:id="@+id/corder_payment_id"

            />
    </LinearLayout>

</ScrollView>