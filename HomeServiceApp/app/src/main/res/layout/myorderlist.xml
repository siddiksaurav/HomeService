<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp"

    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#190341"
       android:orientation="vertical"
       >



       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/order_order_id"
           android:textColor="#ffff"
           android:textSize="20sp"
           android:layout_marginTop="10dp"


           />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_service_name_id"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="10dp"


        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#ffff"
        android:id="@+id/order_provider_name_id"
        android:textSize="20sp"
        android:layout_marginTop="10dp"


        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_time_id"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="10dp"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_status_id"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="10dp"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_cost_id"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="10dp"


        />


   </LinearLayout>

</ScrollView>