<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="4">

        <ImageView
            android:id="@+id/tutor_image_id"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/eletrician1"

            />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"

                android:id="@+id/tutor_name_textview_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:textSize="22dp"


                />

            <TextView
                android:layout_marginLeft="10dp"

                android:id="@+id/tutor_rating_textview_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"


                android:textSize="22dp"


                />

            <TextView
                android:layout_marginLeft="10dp"

                android:id="@+id/tutor_experience_textview_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:textSize="22dp"


                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tutor_select_list_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textColor="#FDF9F9"
                    android:background="@drawable/button_rounded"
                    android:text="Select" />


                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"

                    android:id="@+id/tutor_select_money_item_id"
                    android:layout_width="200dp"

                    android:layout_height="38dp"
                    android:textColor="#1A0101"


                     />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</ScrollView>